{
  "mappings": {
    "tweet": {
      "numeric_detection": true,
      "_boost": {
        "name": "myboost",
        "null_value": 1.2
      },
      "_size": {
        "enabled": true
      },
      "properties": {
        "title": {
          "type": "text",
          "fields": {
            "raw": {
              "type": "text"
            }
          }
        },
        "meta_data": {
          "type": "text"
        },
        "article_info": {
          "type": "text"
        }
      }
    }
  }
}
