{
    "aggs": {
        "top-tags": {
            "terms": {
                "field": "tags",
                "size": 3,
                "order": {
                    "count": "asc"
                }
            },
            "aggs": {
                "top_tag_hits": {
                    "top_hits": {
                        "size": 1,
                        "sort": [
                            {
                                "last_activity_date": {
                                    "order": "desc"
                                }
                            }
                        ],
                        "_source": {
                            "includes": [
                                "title"
                            ]
                        }
                    }
                }
            }
        }
    }
}
