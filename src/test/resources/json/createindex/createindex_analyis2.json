{
    "settings": {
        "index": {
            "number_of_shards": 5,
            "number_of_replicas": 1
        },
        "analysis": {
            "char_filter": {
                "default_charfilter" : {
                    "type" : "mapping",
                    "mappings" : [ "ph=>f", "qu=>q" ]
                }
            },
            "analyzer": {
                "patternAnalyzer": {
                    "type": "pattern",
                    "lowercase": true,
                    "pattern": "[a-z]"
                },
                "mysnowball": {
                    "type": "snowball",
                    "language": "english"
                },
                "myAnalyzer2": {
                    "type": "custom",
                    "tokenizer": "myTokenizer1",
                    "filter": [
                        "myTokenFilter2",
                        "myTokenFilter3",
                        "myFrenchStemmerTokenFilter",
                        "prTokenFilter"
                    ]
                },
                "myAnalyzer3": {
                    "type": "custom",
                    "tokenizer": "lowercase",
                    "filter": [
                        "myTokenFilter1",
                        "reverse",
                        "myTokenFilter5",
                        "myEdgeNGramTokenFilter",
                        "stemmerTokenFilter"
                    ]
                },
                "analyzerWithCharFilter": {
                     "type": "custom",
                     "tokenizer": "standard",
                     "filter": [ "standard" ],
                     "char_filter": [ "default_charfilter" ]
                 }
            },
            "tokenizer": {
                "myTokenizer1": {
                    "type": "standard",
                    "max_token_length": 900
                }
            },
            "filter": {
                "myTokenFilter2": {
                    "type": "length",
                    "max": 10
                },
                "myTokenFilter3": {
                    "type": "unique",
                    "only_on_same_position": true
                },
                "myFrenchStemmerTokenFilter": {
                    "type": "stemmer",
                    "name": "french"
                },
                "prTokenFilter": {
                    "type": "pattern_replace",
                    "pattern": "pattern",
                    "replacement": "rep"
                },
                "myTokenFilter1": {
                    "type": "stop",
                    "stopwords": [],
                    "enable_position_increments": true,
                    "ignore_case": true
                },
                "myTokenFilter5": {
                    "type": "stop",
                    "max_token_count": 5
                },
                "myEdgeNGramTokenFilter": {
                    "type": "edgeNGram",
                    "min_gram": 3,
                    "max_gram": 50
                },
                "stemmerTokenFilter": {
                    "type": "stemmer_override",
                    "rules": [
                        "rule1",
                        "rule2"
                    ]
                }
            }
        }
    }
}
