{
  "mappings": {
    "tweet": {
        "numeric_detection": true,
        "dynamic": "dynamic",
        "_boost": {
            "name": "myboost",
            "null_value": 1.2
        },
        "_size": {
            "enabled": true
        },
        "properties": {
            "first_name": {
              "type": "object",
              "properties": {
                "first_name": {
                  "type": "token_count",
                  "index": "analyzed"
                },
                "any_name": {
                  "type": "string",
                  "index": "analyzed"
                }
              }
            },
        "last_name": {
          "type": "multi_field",
          "path": "just_name",
          "fields": {
            "last_name": {
              "type": "string",
              "index": "analyzed"
            },
            "any_name": {
              "type": "string",
              "index": "analyzed"
            }
          }
        }
      }
    }
  }
}
