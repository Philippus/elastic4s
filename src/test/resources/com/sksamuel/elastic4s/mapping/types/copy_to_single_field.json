{
    "settings": {
        "index": {
            "number_of_shards": 2,
            "number_of_replicas": 1
        }
    },
    "mappings": {
        "tweet": {
            "_all": {
                "enabled": true
            },
            "_source": {
                "enabled": true
            },
            "numeric_detection": true,
            "dynamic": "dynamic",
            "_boost": {
                "name": "myboost",
                "null_value": 1.2
            },
            "_size": {
                "enabled": true
            },
            "properties": {
                "first_name": {
                    "type": "string",
                    "index": "analyzed",
                    "copy_to": ["full_name"]
                },
                "last_name": {
                    "type": "string",
                    "index": "analyzed",
                    "copy_to": ["full_name"]
                },
                "full_name": {
                    "type": "string",
                    "index": "analyzed"
                }
            }
        }
    }
}